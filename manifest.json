{
    "manifest_version": 3,
    "name": "Hide YouTube Shorts",
    "version": "1.0",
    "description": "Hides YouTube Shorts.",
    "icons":{
        "16": "icon/logo.png",
        "48": "icon/logo.png",
        "128": "icon/logo.png"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["scripts/content.js"],
        "run_at": "document_end"
      }
    ],
    "permissions": []
  }
  